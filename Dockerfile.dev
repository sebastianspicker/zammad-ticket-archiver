FROM python:3.12-slim

WORKDIR /app

# System deps (WeasyPrint + basic tooling)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    bash \
    libcairo2 \
    libffi-dev \
    libgdk-pixbuf-2.0-0 \
    libpango-1.0-0 \
    libpangoft2-1.0-0 \
    fonts-dejavu-core \
    shared-mime-info \
  && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml README.md LICENSE CHANGELOG.md /app/
COPY src/ /app/src/

RUN python -m pip install --no-cache-dir -U pip \
  && python -m pip install --no-cache-dir ".[dev,redis]"

EXPOSE 8080

CMD ["bash", "-lc", "PYTHONPATH=/app/src python -m zammad_pdf_archiver"]
